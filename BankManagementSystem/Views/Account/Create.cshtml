@model BankManagementSystem.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-6">
                <label asp-for="AccountType" class="control-label"></label>
                <input asp-for="AccountType" class="form-control" />
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div> 
            <div class="form-group col-6">
                <label asp-for="AccountOpenDate" class="control-label"></label>
                <input asp-for="AccountOpenDate" class="form-control" />
                <span asp-validation-for="AccountOpenDate" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="CustomerId" class="control-label"></label>

                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId">
                    @foreach (var i in ViewBag.Customer)
                    {
                        <option value="@i.Id">@i.FirstName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
